using System;

namespace operatorler
{
    class Program
    {
        static void Main(string[]args)
        {
         int x = 3;
         int y = 3;

         y = y+2;
         Console.WriteLine(y);
         y +=2;
         Console.WriteLine(y);
         y /=1;
         Console.WriteLine(y);
         x *=2;
         Console.WriteLine(x);
        
        //İlişkisel Operatorler

        int a = 3;
        int b = 4;
        bool sonuc = a<b;
        
        Console.WriteLine(sonuc);
        sonuc = a > b;
        Console.WriteLine(sonuc);
        sonuc = a >= b;
        Console.WriteLine(sonuc);
        sonuc = a <= b;
        Console.WriteLine(sonuc);
        sonuc = a == b;
        Console.WriteLine(sonuc);
        sonuc= a != b;
        Console.WriteLine(sonuc);







        }

    }
}
